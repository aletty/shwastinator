extends layout

block content
  .row 
    .small-12.columns
      .row
        .small-4.columns
          img(src='default_prof.jpg').th
        .small-8.columns
          h1 #{user.name}
          h3 Current Tab $#{user.tab}
      br
      .row
        .small-6.columns
          h3 Recent Drinks
          for order in user._orders.reverse()
            .panel
              .row
                .small-2.columns
                  img(src=order.imageSmall, height = "70")
                .small-8.columns
                  h5= order.name
                .small-2.columns
                  h5 $#{order.price}
        .small-6.columns
          .row
            .small-6.columns
              h3 Top Drinks
            .small-6.columns
              .switch.round
                input#x(name='switch-x', type='radio', checked='checked')
                label(for='x', onclick='') Tonight
                input#x1(name='switch-x', type='radio')
                label(for='x1', onclick='') All Time
          for drink in topDrinks.reverse()
            .panel
              .row
                .small-2.columns
                  img(src=drink.imageSmall)
                .small-8.columns
                  h5= drink.name
                .small-2.columns
                  h5 $#{drink.price}