extends layout

block content
  .row 
    .small-3.columns
      include navbar
    .small-9.columns
      .row
        .small-4.columns
          img(src='default_prof.jpg').th
        .small-8.columns
          h1 #{otherUser.name}
          h3 Current Tab $#{otherUser.tab}
      br
      .row
        .small-6.columns
          h3 Recent Drinks
          for order in otherUser._orders.reverse()
            .panel
              .row
                .small-2.columns
                  img(src=order.imageSmall)
                .small-8.columns
                  h5= order.name
                .small-2.columns
                  h5 $#{order.price}
        .small-6.columns
          .row
            .small-6.columns
              h3 Top Drinks
            .small-6.columns
              .switch.round
                input#x(name='switch-x', type='radio', checked='checked')
                label(for='x', onclick='') Tonight
                input#x1(name='switch-x', type='radio')
                label(for='x1', onclick='') All Time
          for order in otherUser._orders
            .panel
              .row
                .small-2.columns
                  img(src=order.imageSmall)
                .small-8.columns
                  h5= order.name
                .small-2.columns
                  h5 $#{order.price}