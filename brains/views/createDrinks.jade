extends layout

block content
  .row
    .small-3.columns
      include navbar
      
    .small-9.columns
      .small-6.columns
        h3 Create a New Drink
      .small-6.columns
        a(href = '/liquid')
          .button#saveDrink Save Drink

          
      form.custom
        .row
          .small-6.columns
            h5 Drink Name
          .small-3.columns
            h5 Cost
          .small-3.columns
            h5 Price
        .row
          .small-6.columns
            input#drinkname(type='text', placeholder = 'rum and coke');
          .small-3.columns
            input#cost(type='text', placeholder = '1.5');
          .small-3.columns
            input#price(type='text', placeholder = '3');
        .row
          .small-3.columns
            h5 Ingredients
          .small-2.columns
            h5 Units
          .small-7.columns
        .row#Ingredients
          .row
            .small-3.columns
              select#liquids(name='ingredient1')
                for liquid in liquids
                  option #{liquid.name}
            .small-1.columns
              input#units(type='text', placeholder = '1');
            .small-4.columns
              .button.small.addLiquid +
            .small-4.columns
              &nbsp



  script
    $('.addLiquid').click(function(){
      $('#Ingredients').append('<div class="row"><div class="small-3 columns"><select id="liquids" name="ingredient1"><option>Empty</option><option>Rum</option><option>Coke</option><option>Vodka</option><option>Orange Juice</option><option>Sprite</option></select></div><div class="small-1 columns"><input id="units" type="text" placeholder="1"></div><div class="small-6 columns">&nbsp</div></div></div>');
    })