extends layout

block content
  .row
    .small-12.columns
      .small-6.columns
        h3 Create a New Drink
      .small-6.columns
        a(href = '/liquid')
          .button#saveDrink Save Drink

          
      form
        .row
          .small-6.columns
            h5 Drink Name
          .small-3.columns
            h5 Cost
          .small-3.columns
            h5 Price
        .row
          .small-6.columns
            input#drinkname(type='text', placeholder = 'rum and coke');
          .small-3.columns
            input#cost(type='text', placeholder = '1.5');
          .small-3.columns
            input#price(type='text', placeholder = '3');
        .row
          .small-3.columns
            h5 Ingredients
          .small-2.columns
            h5 Units
          .small-7.columns
        .row#Ingredients
          .row
            .small-3.columns
              select#ingredient1
                for liquid in liquids
                  option #{liquid.name}
            .small-1.columns
              input#units1(type='text', placeholder = '1');
            .small-4.columns
              .button.small.addLiquid +
            .small-4.columns
              .button.small.dispIngred disp

        .row#currentIngredients



  script.
    $('.addLiquid').click(function(){
      $('#currentIngredients').append('<div class="row"><div class="small-6 columns"><div data-alert class="alert-box secondary ingreds" name="'+ $('#ingredient1').val() +'">'+ $('#ingredient1').val() +' (' + $('#units1').val() + ') <a href="#" class="close">&times;</a></div></div></div>');
    });

    $('.dispIngred').click(function(){
      $('.ingreds').each(function(){
        console.log($(this).attr('name'));
      });
    })